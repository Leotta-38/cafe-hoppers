<p>Popular cafes</p>
<div class="grid-wrapper">

  <% for (let i = 0; i < 4; i++) { %>
  
    <div class="ui-card">
      <a href="/cafes/<%= cafes1[i].id %>">
        <h2><%= cafes1[i].name %></h2>
        <% let ratingPoint = cafes1[i].ave_review_point %>
        <% if (ratingPoint.length === 1) { %>
        <% ratingPoint = `${ratingPoint}.0`%>
        <% } %>
        <p>Rating: <%= ratingPoint %></p>
        <% const photo = photos.find(({cafe_id}) => cafe_id === cafes1[i].id) %>
        <% if (photo) { %>
          <img src="<%= photo.image_url %>" alt="<%= cafes1[i].name %>">
        <% } else { %>
          <img src="/img/no_image.jpg" alt="no_image">
        <% } %>  
      </a>
    </div>
  
    <% } %>
  
  </div>
  <a href="/cafes?sortby=rating_desc">See all</a>

<p>Recently shared cafes</p>
<div class="grid-wrapper">

  <% for (let i = 0; i < 4; i++) { %>
  
    <div class="ui-card">
      <a href="/cafes/<%= cafes2[i].id %>">
        <h2><%= cafes2[i].name %></h2>
        <% let date = cafes2[i].date.split(',').shift().split('/')%>
        <% let temp = date[0] %>
        <% date[0] = date[1] %>
        <% date[1] = temp %>
        <% if (date[1].length = 1) { %>
        <% date[1] = `0${date[1]}`%>
        <% } %>
        <% date = date.join('/')%>  
        <p>Shared on: <%= date %></p>
        <% const photo = photos.find(({cafe_id}) => cafe_id  === cafes2[i].id) %>
        <% if (photo) { %>
          <img src="<%= photo.image_url %>" alt="<%= cafes2[i].name %>">
        <% } else { %>
          <img src="/img/no_image.jpg" alt="no_image">
        <% } %>  
      </a>
    </div>
  
    <% } %>
  
  </div>
  <a href="/cafes?sortby=date_desc">See all</a>