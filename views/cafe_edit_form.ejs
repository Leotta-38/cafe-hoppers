<div class="form">

  <form action="/cafes/<%= cafe.id %>?_method=put" method="post">
    <label>Name</label>
    <input type="text" name="name" value="<%= cafe.name %>" required>
    <label>Google Maps link</label>
    <input type="text" name="gmapUrl" value="<%= cafe.gmap_url %>">
    <label>Phone number</label>
    <input type="text" name="phone" value="<%= cafe.phone %>">
    <label>Website</label>
    <input type="text" name="website" value="<%= cafe.website %>">
    <button>Update</button>
  </form>
  
  <form action="/cafes/<%= cafe.id %>?_method=delete" method="post">
    <button class="delete-btn">Delete</button>
  </form>

</div>


<%- contentFor('js') %>
